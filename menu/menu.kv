#:kivy 2.2.1

<NormalMenuPageWidget>:
  BoxLayout:
    id: layout
    orientation: 'vertical'
    spacing: 7

    ItemWidget:
      id: first_item
      item: root.items[0] if len(root.items) > 0 else None
      size_hint: 1, None

    ItemWidget:
      id: second_item
      item: root.items[1] if len(root.items) > 1 else None
      size_hint: 1, None

    ItemWidget:
      id: third_item
      item: root.items[2] if len(root.items) > 2 else None
      size_hint: 1, None

<HeaderMenuPageWidget>:
  BoxLayout:
    id: layout
    orientation: 'vertical'

    Widget:
      size_hint: 1, None
      height: dp(14)

    Label:
      padding: dp(50), 0, dp(50), 0
      text: root.heading
      text_size: self.size
      halign: 'center'
      valign: 'bottom'
      font_size: dp(20)
      color: 1, 1, 1
      size_hint: 1, None
      height: dp(50)

    Label:
      text: root.sub_heading
      text_size: self.size
      font_size: dp(12)
      halign: 'center'
      valign: 'middle'
      color: .5, .5, .5
      size_hint: 1, None
      height: dp(30)
      
    Widget:
      size_hint: 1, None
      height: dp(10)

    ItemWidget:
      id: first_item
      item: root.items[0] if len(root.items) > 0 else None
      size_hint: 1, None

<MainWidget>:
