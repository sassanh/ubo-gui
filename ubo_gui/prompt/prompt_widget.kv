#:kivy 2.3.0

<PromptWidget>:
  BoxLayout:
    id: layout
    padding: 0, root.padding_top, 0, root.padding_bottom
    orientation: 'vertical'
    spacing: dp(UBO_GUI_MENU_ITEM_GAP)

    Label:
      padding: dp(10), 0, dp(10), 0
      text_size: self.size
      halign: 'center'
      valign: 'bottom'
      color: 1, 1, 1
      size_hint: 1, None
      height: dp(50) if root.icon is not None else dp(0)
      font_size: dp(30)
      text: root.icon if root.icon is not None else ''
      markup: True

    Label:
      padding: dp(10), 0, dp(10), 0
      text: root.prompt
      text_size: self.size[0], None
      font_size: dp(18)
      halign: 'center'
      valign: 'middle'
      color: 1, 1, 1
      size_hint: 1, None
      height: dp(20)
      shorten: False
      strip: True
      markup: True

    ItemWidget:
      item: root.first_item
      size_hint: 1, None

    ItemWidget:
      item: root.second_item
      size_hint: 1, None
