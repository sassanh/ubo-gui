#:kivy 2.2.1

<ItemWidget>:
  height: dp(52)
  canvas.before:
    Color:
      rgba: root.background_color if root.is_set else (0, 0, 0, 0)

    RoundedRectangle:
      pos: self.pos
      size: (dp(50) if self.is_short else self.size[0] - dp(30), self.size[1]) if root.is_set else (0, 0)
      radius: (0, 0), (dp(26), dp(26)), (dp(26), dp(26)), (0, 0)

  orientation: 'horizontal'
  spacing: dp(8)

  Widget:
    width: dp(2)
    size_hint: None, 1

  Label:
    pos: root.pos
    color: root.color
    font_size: dp(26)
    text: root.icon if root.icon is not None else ''
    font_name: 'material_symbols'
    size_hint: None, 1
    width: self.parent.height - dp(25)
    valign: 'middle'

  Label:
    pos: root.pos
    color: root.color
    font_size: dp(18)
    text: '' if root.is_short else root.label
    text_size: self.size
    size_hint: 1, 1
    halign: 'left'
    valign: 'middle'

  Widget:
    width: dp(34)
    size_hint: None, 1
