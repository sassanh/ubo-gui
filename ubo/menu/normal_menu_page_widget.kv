#:kivy 2.2.1

<NormalMenuPageWidget>:
  BoxLayout:
    id: layout
    orientation: 'vertical'
    spacing: dp(7)

    ItemWidget:
      id: first_item
      item: root.items[0] if len(root.items) > 0 else None
      size_hint: 1, None

    ItemWidget:
      id: second_item
      item: root.items[1] if len(root.items) > 1 else None
      size_hint: 1, None

    ItemWidget:
      id: third_item
      item: root.items[2] if len(root.items) > 2 else None
      size_hint: 1, None
