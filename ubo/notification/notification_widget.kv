#:kivy 2.2.1

<NotificationWidget>:
  BoxLayout:
    orientation: 'horizontal'
    spacing: dp(4)

    BoxLayout:
      orientation: 'vertical'
      size_hint: None, 1
      width: dp(50)

      ItemWidget:
        id: first_item
        item: root.items[0] if len(root.items) > 0 else None
        size_hint: 1, None

    StencilView:
      id: container
      size_hint: 1, 1

      canvas.before:
        StencilPush
        Rectangle:
          pos: self.pos
          size: self.size
        StencilUse

      canvas.after:
        StencilUnUse
        Rectangle:
          pos: self.pos
          size: self.size
        StencilPop

      BoxLayout:
        pos: container.pos
        orientation: 'vertical'
        height: self.minimum_height
        width: container.width
        id: scrollable_widget

        Label:
          padding: dp(20), 0, dp(20), 0
          text: root.heading
          text_size: self.size
          halign: 'center'
          valign: 'bottom'
          color: root.color
          size_hint: 1, None
          height: dp(60)
          font_size: dp(52)
          text: root.notification.icon
          font_name: 'material_symbols'

        Label:
          font_size: dp(20)
          text: root.notification.title
          text_size: self.size
          size_hint: 1, None
          height: dp(24)
          halign: 'center'
          shorten: True
          shorten_from: 'center'

        Widget:
          size_hint: 1, None
          height: dp(12)

        Label:
          font_size: dp(16)
          text: root.notification.content
          text_size: self.size[0], None
          height: self.texture_size[1]
          size_hint: 1, None
          halign: 'center'

        Widget:
          size_hint: 1, 1

    AnimatedSlider:
      id: slider
      min: 0
      max: max(scrollable_widget.height - container.height, 0)
      animated_value: self.max
      orientation: 'vertical'
      size_hint: (None, 1) if scrollable_widget.height - container.height > 0 else (None, None)
      width: dp(50)
      height: 0
      opacity: 1 if scrollable_widget.height - container.height > 0 else 0
      disabled: scrollable_widget.height - container.height <= 0

      on_value: scrollable_widget.y = container.y - slider.value
